<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".main.MainActivity"
		android:orientation="vertical">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:background="@color/colorPrimary">

		<TextView
				android:layout_centerInParent="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="IotProject"
				android:textColor="#ffffff"
				android:textSize="18sp"
				android:textStyle="bold"/>


		<TextView
				android:id="@+id/reScanBtn"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ReScan"
				android:textStyle="bold"
				android:textColor="#ffffff"
				android:textSize="14sp"
				android:visibility="invisible"/>

	</RelativeLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:weightSum="10"
			android:orientation="vertical">


		<android.support.v7.widget.RecyclerView
				android:id="@+id/mainList"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="9">


		</android.support.v7.widget.RecyclerView>


		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:weightSum="9">

			<LinearLayout
					android:id="@+id/deviceRegisterArea"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="3"
					android:gravity="center_vertical">

				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Device\nRegister"
						android:gravity="center"
						android:id="@+id/DeviceRegiButton"/>

			</LinearLayout>

			<LinearLayout
					android:id="@+id/conditionRegisterArea"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="3"
					android:gravity="center_vertical">

				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Condition\nRegister"
						android:gravity="center"/>

			</LinearLayout>

			<LinearLayout
					android:id="@+id/unlockArea"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="3"
					android:gravity="center_vertical">


				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Unlock"
						android:gravity="center"/>


			</LinearLayout>


		</LinearLayout>

	</LinearLayout>


</LinearLayout>